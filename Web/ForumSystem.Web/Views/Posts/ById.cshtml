@model ForumSystem.Web.ViewModels.Posts.PostViewModel
@{
    this.ViewData["Title"] = Model.Title;
    void DisplayComments(string parentId)
    {
        var comments = this.Model.Comments.Where(x => x.ParentId == parentId);
        if (!comments.Any())
        {
            return;
        }
        <br />
        @foreach (var comment in comments)
        {
            <div class="container-fluid mt-100">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <div class="media flex-wrap w-100 align-items-center">
                                    <img src="@comment.UserProfileImage" style="width:80px; height:80px;" class="d-block ui-w-40 rounded-circle" alt="">
                                    <div class="media-body ml-3">
                                        @Model.UserUserName
                                        <div class="datetime text-muted small">
                                            @Model.CreatedOn.ToString("f")
                                        </div>
                                    </div>
                                    <div class="text-muted small ml-3">
                                        @if (this.User.Identity.IsAuthenticated)
                                        {
                                            var commentId = $"\"{@comment.Id}\"";
                                            <div class="px-4 pt-3"> <button type="button" class="btn btn-secondary" onclick="showAddCommentForm(@commentId)"><i class="fa fa-comment-dots"></i>&nbsp; Answer</button> </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <article>
                                    @Html.Raw(comment.SanitizedContent)
                                </article>
                                @{ DisplayComments(comment.Id); }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

@if (this.TempData["InfoMessage"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessage"]
    </div>
}

<h1>@Model.Title</h1>
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="@this.Model.UserProfileImage" style="width:80px; height:80px;" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            @Model.UserUserName
                            <div class="datetime text-muted small">
                                @Model.CreatedOn.ToString("f")
                            </div>
                        </div>
                        <div class="text-muted small ml-3">
                            @{
                                var postId = $"\"{Model.Id}\"";
                                <form id="votesForm" method="post"></form>
                                <div>
                                    <a href="#" onclick="sendVote(@postId, true)">
                                        <i class="fa fa-thumbs-up"></i>
                                    </a>
                                </div>
                                <div id="votesCount">@Model.VotesCount</div>
                                <div>
                                    <a href="#" onclick="sendVote(@postId, false)">
                                        <i class="fa fa-thumbs-down"></i>
                                    </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <article>
                        @Html.Raw(Model.SanitizedContent)
                    </article>

                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <div class="row">
                            <div class="col float-left pt-2 px-5">
                                <a href="#"> <i class="fa fa-heart"></i></a>
                            </div>
                            <div class="col float-right px-5"> <button type="button" class="btn btn-primary float-right" onclick="showAddCommentForm(0)"><i class="fa fa-comment-dots" ></i>&nbsp; Comment</button> </div>
                        </div>
                        <div class="clearfix"></div>
                    }
                    @{ DisplayComments(null); }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: ["image paste table link code media"]
    });
</script>
<div>
    <form asp-controller="Comments" asp-action="Create" method="post" id="AddCommentForm" style="display: none">
        <input type="hidden" name="PostId" value="@this.Model.Id" />
        <input type="hidden" name="ParentId" value="0" />
        <div>
            <label for="Content"></label>
            <textarea name="Content" id="Content" class="form-control"></textarea>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Add comment" />
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function showAddCommentForm(parentId) {
            $("#AddCommentForm input[name='ParentId']").val(parentId);
            $("#AddCommentForm").show();
            $([document.documentElement, document.body]).animate({
                scrollTop: $("#AddCommentForm").offset().top
            }, 1000);
        }

        function sendVote(postId, isUpVote) {
            var token = $("#votesForm input[name=__RequestVerificationToken]").val();
            var json = { postId: postId, isUpVote: isUpVote };
            $.ajax({
                url: "/api/votes",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                headers: { 'X-CSRF-TOKEN': token },
                success: function (data) {
                    $("#votesCount").html(data.votesCount);
                }
            });
        }
    </script>
}